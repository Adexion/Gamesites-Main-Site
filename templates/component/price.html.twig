<section class="container-fluid bg-light mt-5 inner-padding">
    <div class="row">
        <h1 id="offer" class="text-center mb-4">Ile to kosztuje?</h1>
        <div class="d-flex align-items-center justify-content-center mb-4">
            brutto
            <div class="form-check form-switch">
                <label for="flexSwitchCheckDefault"></label><input class="form-check-input" type="checkbox"
                                                                   id="flexSwitchCheckDefault">
            </div>
            netto
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for price in prices %}
                <div class="col-lg-4 col-md-12 d-flex justify-content-center flex-column align-items-center">
                    <div class="choices text-center text-white mt-4">
                        <h4>{{ price.name }}</h4>
                        <p class="small">{{ price.shortText }}</p>
                        {{ price.description | raw }}
                        <h3 class="price" data-netto="{{ price.netto }}" data-vat="{{ price.vat }}"></h3>
                        <a class="btn btn-primary btn-custom w-50 m-1" href="{{ path('form', {id: price.id}) }}">Kup teraz</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
