{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Lista zgłoszeń</h1>
        <div>
            <a class="btn-danger btn" href="{{ path('app_ticket_create') }}">Utwórz zgłoszenie</a>
        </div>
    </div>

    {% if tickets is empty %}
        <div class="pt-3 d-flex justify-content-center">
            <h1 class="h2">
                Lista zgłoszeń jest pusta. Aby utworzyć nowe zgłoszenie naciśnij przycisk Utwórz zgłoszenie.
            </h1>
        </div>
    {% else %}
        <div class="table-responsive">
        <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tytuł</th>
            <th scope="col">Typ</th>
            <th scope="col">Status</th>
        </tr>
        </thead>
        <tbody>
    {% endif %}
    {% for ticket in tickets %}
        <tr>
            <td>{{ loop.index }}</td>
            <td><a href="{{ path('app_ticket_chat', {'id': ticket.id}) }}" class="link-success me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Przejdź do wątku">{{ ticket.title }}</a></td>
            <td>{{ ticket.type }}</td>
            <td>{{ ticket.status | trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}