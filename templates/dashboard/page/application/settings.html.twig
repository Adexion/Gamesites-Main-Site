{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex flex-row justify-content-between align-items-center">
            <h1>{{ application.name }}</h1>
            <div>
                <button class="btn-danger btn">Zresetuj aplikacje&nbsp;<i class="fas fa-power-off"></i></button>
            </div>
        </div>

        <div class="mt-5 row mx-0 justify-content-between">
            <div class="col-12 col-lg-6 px-0 pe-5 pt-2">
                <span class="h4">Aktualizacja aplikacji</span>
                <div class="mt-3">
                    {{ form_start(editForm, {'action': path('app_setting_edit', {'coupon': application.coupon}), 'method': 'POST'}) }}
                    {{ form_end(editForm) }}
                </div>
            </div>
            <div class="col-12 col-lg-5 border-color">
                <span class="h4">Resetowanie has≈Ça</span>
                <div class="mt-3">
                    {{ form_start(resetPasswordForm) }}
                    {{ form_widget(resetPasswordForm.password) }}
                    {{ form_end(resetPasswordForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}